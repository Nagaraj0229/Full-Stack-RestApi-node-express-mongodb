<!-- Main Site -->
<main id="site">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-user">
        <span class="text-gradient">New User <i class="fas fa-user"></i></span>
      </a>
      <!-- Form handling -->
      <form action="/" method="POST">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Gender</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <%- include('include/_show') %>
          </tbody>
        </table>
      </form>
      <!-- /Form handling -->
    </div>
  </div>
</main>
<!-- /Main Site -->

